# Environment
NODE_ENV=development

# Server
PORT=5000

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Database
DATABASE_URI=
DB_HOST=localhost
DB_PORT=5432
DB_NAME=myapp
DB_USER=root
DB_PASSWORD=

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
# RATE_LIMIT_WINDOW_MS: Time window in milliseconds (default: 900000 = 15 minutes)
# RATE_LIMIT_MAX: Maximum requests per window (default: development=1000, production=100)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# Logs
LOG_LEVEL=info
LOG_DIR=logs